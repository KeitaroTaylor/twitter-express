<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Birding App</title>
  <!-- <link rel="shortcut icon" href="favicon.ico"> -->
  <!-- <link rel="stylesheet" href="styles.css"> -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
<body class="bg-info">
<div class="container-l m-5">


  <h1 class="text-center">Birding Tracker</h1>

  <form action="/birds" method="POST">
    <div class="bg-light rounded-3 p-3 m-3 d-flex justify-content-center">
      <div class="mx-2">
        <span class="w-100 d-flex justify-content-center">Date</span>
        <input type="date" placeholder="Date" name="date">
      </div>
      <div class="mx-2">
        <span class="w-100 d-flex justify-content-center">Species</span>
        <input type="text" placeholder="What species?" name="species">
      </div>
      <div class="mx-2">
        <span class="w-100 d-flex justify-content-center">Count</span>
        <input type="tel" placeholder="How many?" name="count">
      </div>
      <div class="mx-2">
        <span class="w-100 d-flex justify-content-center">Location</span>
        <input type="text" placeholder="Where at?" name="location">
      </div>
    </div class="mx-2">
    <div class="w-100 d-flex justify-content-center">
      <button class="btn btn-success text-center m-3" type="submit">Submit Sighting!</button>
    </div>
  </form>

  <% let count = 0 %>
  <% let date %>
<div class="bg-light rounded-3 p-3 m-3">
  <h3 class="d-flex justify-content-center">Sightings By Date</h3>
  <ul class="tweets">
  <% for(var i=0; i<birds.length; i++) {%>
    <% if (date != birds[i].date) { %>
      <% date = birds[i].date %>
      <% count = 0 %>
      <% count2 = 0 %>
    <% } %>
    <% if (count2 == 0) { %>
      <% for (var j=0; j<birds.length; j++) { %>
        <% if (birds[i].date == birds[j].date) { %>
          <% if (count == 0) { %>
            <h4 class="mt-5 list-group"><%= birds[i].date %></h4>
          <% } %>
          <li class="list-group-item">
            <span><%= birds[j].count %></span>
            <span><%= birds[j].species %></span>
            <span>at</span>
            <span><%= birds[j].location %></span>
            <span><i class="fa fa-arrow-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% count++ %>
        <% } %>
      <% } %>
    <% } %>
    <% count2++ %>
  <% } %>
  </ul>
</div>



<div class="bg-light rounded-3 p-3 m-3">
  <% let countOne = 0 %>
  <% let location %>

  <h3 class="d-flex justify-content-center">Sightings By Location</h3>
  <ul class="tweets">
  <% for(var i=0; i<birds.length; i++) {%>
    <% if (location != birds[i].location) { %>
      <% location = birds[i].location %>
      <% countOne = 0 %>
      <% countTwo = 0 %>
    <% } %>
    <% if (countTwo == 0) { %>
      <% for (var j=0; j<birds.length; j++) { %>
        <% if (birds[i].location == birds[j].location) { %>
          <% if (countOne == 0) { %>
            <h4 class="mt-5 list-group"><%= birds[i].location %></h4>
          <% } %>
          <li class="list-group-item">
            <span><%= birds[j].count %></span>
            <span><%= birds[j].species %></span>
            <span>on</span>
            <span><%= birds[j].date %></span>
            <span><i class="fa fa-arrow-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% countOne++ %>
        <% } %>
      <% } %>
    <% } %>
    <% countTwo++ %>
  <% } %>
  </ul>
</div>
</div>
  <script src="main.js"></script>

</body>
</html>
